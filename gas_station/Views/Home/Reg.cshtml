@model YourProjectNamespace.Models.RegisterViewModel

@{
    ViewData["Title"] = "Reg";
}

<div class="text-center">
    <h1 class="display-4">Реєстрація</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Електронна пошта" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Пароль" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Підтвердіть пароль" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Реєстрація" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
<div class="text-center mt-3">
    <p class="lead">Вже маєте обліковий запис? <a href="@Url.Action("Login", "Home")" class="text-primary">Перейти до входу</a>.</p>
</div>
