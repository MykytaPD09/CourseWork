@{
    ViewData["Title"] = "Map";
}

<div class="container mt-3">
    <div class="text-center">
        <h1 class="display-4">Мапа мережі</h1>
    </div>

    <!-- Кнопки для перемикання між мапою та списком АЗС -->
    <div class="text-center mt-3">
        <button id="showMapBtn" class="btn btn-white border">Показати карту</button>
        <button id="showGasStationsBtn" class="btn btn-white border">Показати список АЗС</button>
    </div>

    <!-- Контейнер для мапи -->
    <div id="mapContainer" class="mt-3">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10963687.662194809!2d20.630588147812638!3d47.865130203104684!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40d1d9c154700e8f%3A0x1068488f64010!2z0KPQutGA0LDQuNC90LA!5e0!3m2!1sru!2sua!4v1716759965011!5m2!1sru!2sua" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <!-- Контейнер для списку АЗС -->
    <div id="gasStationsContainer" class="mt-3" style="display: none;">
        <h2>Список АЗС</h2>
        <ul id="gasStations">
            <li>м. Харків, проспект Героїв Харкова, 12</li>
            <li>м. Харків, вул. Тракторобудівельників, 143</li>
            <li>м. Харків, вул. Чуваська, 1</li>
            <li>м. Полтава, проспект Миру, 8а</li>
            <li>м. Полтава, вул. Великотирнівська, 46</li>
            <li>м. Дніпро, вул. Лисиченко Марії, 6</li>
            <li>м. Дніпро, вул. Передова, 263</li>
            <li>м. Дніпро, проспект Слобожанський, 2г</li>
            <li>м. Черкаси, вул. Смілянська, 78/4</li>
            <li>м. Київ, проспект Броварський, 16а</li>
            <li>м. Київ, вул. Миколи Бажана, 44</li>
            <li>м. Київ, вул. Дніпровська Набережна, 17в</li>
        </ul>
    </div>
</div>

<!-- JavaScript для обробки кнопок перемикання -->
@section Scripts {
    <script>
        // Обробник кліків на кнопку "Показати карту"
        document.getElementById('showMapBtn').addEventListener('click', function () {
            document.getElementById('mapContainer').style.display = 'block';
            document.getElementById('gasStationsContainer').style.display = 'none';
        });

        // Обробник кліків на кнопку "Показати список АЗС"
        document.getElementById('showGasStationsBtn').addEventListener('click', function () {
            document.getElementById('mapContainer').style.display = 'none';
            document.getElementById('gasStationsContainer').style.display = 'block';
        });

        // Додавання стилів при наведенні на кнопки
        const buttons = document.querySelectorAll('.btn-white');
        buttons.forEach(button => {
            button.addEventListener('mouseenter', () => {
                button.classList.add('btn-hover');
            });
            button.addEventListener('mouseleave', () => {
                button.classList.remove('btn-hover');
            });
        });
    </script>
    <style>
        .btn-hover {
            background-color: #f8f9fa;
            border-color: #f8f9fa;
        }

        .btn-white:hover {
            background-color: #f8f9fa;
            border-color: #f8f9fa;
        }
    </style>
}
